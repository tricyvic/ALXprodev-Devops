#/bin/bash
# This script is used to fetch and display PokÃ©mon data from the PokeAPI
response=$(curl -s "https://pokeapi.co/api/v2/pokemon/")
# If the request fails, it should log the error to an error file: errors.txt
if [ $? -ne 0 ]; then
    echo "Failed to fetch data" >> errors.txt
    exit 1
else
    $response >> data.json 
    echo Fetched successfully 
fi
